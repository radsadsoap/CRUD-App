<%- include("dashboard") %>

<div class="px-10 p-4">
    <h1 class="text-7xl mb-6">Your Expenses</h1>
    <a
        href="/addExpenses"
        class="bg-black text-white font-bold py-2 px-4 rounded mb-4 inline-block"
    >
        Add Expenses
    </a>
</div>

<div class="px-10">
    <table class="min-w-full bg-white">
        <tr class="bg-gray-800 text-white">
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Name
            </th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Category
            </th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Amount
            </th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Date of Purchase
            </th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Description
            </th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">
                Actions
            </th>
        </tr>
        <tbody class="text-gray-700">
            <% if (expenses && expenses.length > 0) { %> <%
            expenses.forEach(expense => { %>
            <tr>
                <td class="text-left py-3 px-4"><%= expense.name %></td>
                <td class="text-left py-3 px-4"><%= expense.category %></td>
                <td class="text-left py-3 px-4">
                    â‚¹<%= expense.amount.toFixed(2) %>
                </td>
                <td class="text-left py-3 px-4">
                    <%= expense.dateOfPurchase.toLocaleDateString() %>
                </td>
                <td class="text-left py-3 px-4"><%= expense.description %></td>
                <td class="text-left py-3 px-4">
                    <a
                        href="/editExpenses?id=<%= expense._id %>"
                        class="text-blue-500 hover:text-blue-700"
                        >Edit</a
                    >
                    |
                    <a
                        href="/deleteExpenses?id=<%= expense._id %>"
                        class="text-red-500 hover:text-red-700"
                        onclick="return confirm('Are you sure you want to delete this expense?')"
                        >Delete</a
                    >
                </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
                <td colspan="6" class="text-center py-3 px-4">
                    No expenses found
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
