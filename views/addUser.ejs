<%- include("dashboard") %>

<div class="flex flex-col p-4 w-1/3 gap-5 justify-center m-auto h-[80vh]">
    <h1 class="text-5xl mb-4">Add User</h1>
    <form action="/addUserSubmit" method="post">
        <div class="mb-4">
            <label
                for="username"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Username</label
            >
            <input
                type="text"
                id="username"
                name="username"
                required
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            />
        </div>
        <div class="mb-4">
            <label
                for="email"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Email</label
            >
            <input
                type="email"
                id="email"
                name="email"
                required
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            />
        </div>
        <div class="mb-4">
            <label
                for="password"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Password</label
            >
            <input
                type="password"
                id="password"
                name="password"
                required
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            />
        </div>
        <button
            type="submit"
            class="bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
            Add User
        </button>
    </form>
</div>
